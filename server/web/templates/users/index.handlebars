<div class="container-fluid h-100">
  <div class="row h-100">
    {{>dashboardNav}}
    <div class="col-sm-9 col-md-10">
      <div class="container" style="padding-top: 60px">
        <h3>Users</h3>
        {{#if user.roles.root}}
          <a class="btn btn-primary" href="../users/create">Create</a>
        {{else if user.roles.admin}}
          <a class="btn btn-primary" href="../users/create">Create</a>
        {{else if user.roles.researcher}}
          <a class="btn btn-primary" href="../users/create">Create</a>
        {{/if}}
        <hr>
        <div class="card">
          <div class="container" style="padding-top: 20px; padding-bottom: 20px">
            <table id="userTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
              <tr>
                <th>Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>StudyID</th>
                <th>Joined Study</th>
                {{#if user.roles.admin}}
                  <th>ID</th>
                  <th>Edit</th>
                  <th>Delete</th>
                {{/if}}
              </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  var table;
  $(document).ready(function () {
    table = $('#userTable').DataTable({
      "processing": true,
      "serverSide": true,
      "scrollX": true,
      "stateSave": true,
      "ajax": {
        "url": "../api/users",
        "data": function (d) {
          d.fields = "name username email studyID timeCreated";
        }
      },
      "columns": [
        {
          "data": "name",
          "defaultContent": ""
        },
        {
          "data": "username",
          "defaultContent": ""
        },
        {
          "data": "email",
          "defaultContent": ""
        },
        {
          "data": "studyID",
          "render": function (data, type, row) {
            if (row.studyID > 0) {
              return row.studyID;
            }
            return '';
          }
        },
        {
          "data": "timeCreated",
          "render": function (data, type, row) {
            var date = new Date(row.timeCreated);
            return date.toDateString() + ' ' + date.toLocaleTimeString('en-us');
          }
        },
        {{#if user.roles.admin}}
          {
            "data": "_id",
            "defaultContent": ""
          },
          {
            "data": "_id",
            "render": function (data, type, row) {
              return '<button class="btn btn-secondary" id="edit'+row._id+'" onclick="editDoc(\'' + row._id + '\')">Edit</button>';
            }
          },
          {
            "data": "_id",
            "render": function (data, type, row) {
              return '<button class="btn btn-danger" id="delete'+row._id+'" onclick="deleteDoc(\'' + row._id + '\')">Delete</button>';
            }
          }
        {{/if}}
      ]
    });
  });
</script>
<script type="text/javascript" src="../../public/scripts/users/index.js"></script>
