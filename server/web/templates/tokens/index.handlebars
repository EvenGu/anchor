<div class="container-fluid h-100">
  <div class="row h-100">
    {{>dashboardNav}}
    <div class="col-sm-9 col-md-10">
      <div class="container" style="padding-top: 60px">
        <h3>Tokens</h3>
        {{#role user 'researcher'}}
          <a class="btn btn-primary" href="../tokens/create">Create</a>
        {{/role}}
        <hr>
        <div class="card">
          <div class="container" style="padding-top: 20px; padding-bottom: 20px">
            <table id="table" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
              <tr>
                <th>Username</th>
                <th>Name</th>
                <th>Token</th>
                <th>Last Used</th>
                <th>Time</th>
                {{#if user.roles.admin}}
                  <th>Token</th>
                  <th>Delete</th>
                {{/if}}
              </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  var table;
  $(document).ready(function () {
    table = $('#table').DataTable({
      "processing": true,
      "serverSide": true,
      "scrollX": true,
      "stateSave": true,
      "ajax": {
        "url": "../api/tokens",
        "data": function (d) {
          d.fields = "username userId studyID inStudy name token lastUsed time";
        }
      },
      "columns": [
        {
          "data": "user.username",
          "defaultContent": "Nonregistered user"
        },
        {
          "data": "name",
          "defaultContent": ""
        },
        {
          "data": "token",
          "defaultContent": ""
        },
        {
          "data": "lastUsed",
          "render": function (data, type, row) {
            if(row.lastUsed) {
              var date = new Date(row.lastUsed);
              return date.toDateString() + ' ' + date.toLocaleTimeString('en-us');
            } else {
              return '';
            }
          }
        },
        {
          "data": "time",
          "render": function (data, type, row) {
            var date = new Date(row.time);
            return date.toDateString() + ' ' + date.toLocaleTimeString('en-us');
          }
        },
        {{#if user.roles.admin}}
          {
            "data": "_id",
            "render": function (data, type, row) {
              return '<button class="btn btn-secondary" id="edit'+row._id+'" onclick="editDoc(\'' + row._id + '\')">Edit</button>';
            }
          },
          {
            "data": "_id",
            "render": function (data, type, row) {
              return '<button class="btn btn-danger" id="delete'+row._id+'" onclick="deleteDoc(\'' + row._id + '\')">Delete</button>';
            }
          }
        {{/if}}
      ]
    });
  });
</script>
<script type="text/javascript" src="../../public/scripts/tokens/index.js"></script>
